#!/bin/sh

set -e

. /usr/share/debconf/confmodule

db_get mailman3-core/config_hyperkitty
if [ "$RET" = "true" ]; then
    if grep -q -E '^\s*#?\s*\[archiver\.hyperkitty\]\s*$'; then
        cat /usr/share/mailman3-core/mailman_cfg_hyperkitty_snippet.cfg \
            >>/etc/mailman3/mailman.cfg
    fi;
fi

#DEBHELPER#
